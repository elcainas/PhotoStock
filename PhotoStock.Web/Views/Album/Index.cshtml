@model IEnumerable<PhotoStock.BusinessLogic.Entities.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink( "Ver Album", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
